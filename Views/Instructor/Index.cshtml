﻿@model List<DBSchoolManagementSystem.Models.Instructor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Instructor</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}



<table class="table">
    <tr style="background-color: black; color: white;">
        <th>Instructor Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Courses</th>
        <th>Post</th>
        <th>Department Name</th>
        <th>Course Name</th>

        <th>Action</th>
    </tr>



    @foreach (var item in Model)
    {
        <tr alignstyle="margin:0 auto">

            <td>@item.Instructorid</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>@item.Courses</td>
            <td>@CommonUtilities.GetTypeNameFromEmployeeId(item.TypeId)</td>
            <td>@CommonUtilities.GetDepartmentNameFromDepartmentId(item.DepartmentId)</td>
            <td>@CommonUtilities.GetCourseNameFromCourseId(item.Courseid)</td>






            <td>
                <div style="display: flex; justify-content:flex-start;">
                    @if (User.IsInRole("Admin"))
                    {
                        <div style=" border: 1px solid #ccc; border-radius: 2px; background-color:lightblue; color:black;">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Courseid })
                        </div>
                    }
                    <div style="border: 1px solid #ccc; border-radius: 2px; background-color:lightgreen; color:black;">
                        @Html.ActionLink("Details", "Details", new { id = item.Courseid })
                    </div>
                    @if (User.IsInRole("Admin"))
                    {
                        <div style=" border: 1px solid #ccc; border-radius: 2px; background-color:lightcoral; color:black;">
                            @Html.ActionLink("Delete", "Delete", new { id = item.Courseid })
                        </div>
                    }
                </div>
            </td>
        </tr>
    }
</table>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}