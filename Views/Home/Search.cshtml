@model DBSchoolManagementSystem.Models.SearchViewModel

<style>
    .search-results {
        margin-top: 20px;
    }

        .search-results table {
            width: 100%;
            border-collapse: collapse;
        }

        .search-results th,
        .search-results td {
            padding: 8px;
            border: 1px solid #ccc;
        }

        .search-results th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .search-results .student-details,
        .search-results .instructor-details {
            background-color: #ffffff;
        }
</style>

<h2>Search Results</h2>

<div class="search-results">
    @if (Model.Students.Any())
    {
        <h3>Students:</h3>
        <table>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Enrollment Date</th>
                <th>Contact</th>
            </tr>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@student.FullName</td>
                    <td>@student.Email</td>
                    <td>@student.EnrollmentDate</td>
                    <td>@student.Contactno</td>
                </tr>
            }
        </table>
    }

    @if (Model.Instructors.Any())
    {
        <h3>Instructors:</h3>
        <table>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Courses</th>
                <th>Department Name</th>
                <th>Course Name</th>
            </tr>
            @foreach (var instructor in Model.Instructors)
            {
                <tr>
                    <td>@instructor.FirstName</td>
                    <td>@instructor.LastName</td>
                    <td>@instructor.Courses</td>
                    <td>@instructor.DepartmentId</td>
                    <td>@instructor.Courseid</td>
                </tr>
            }
        </table>
    }
</div>
